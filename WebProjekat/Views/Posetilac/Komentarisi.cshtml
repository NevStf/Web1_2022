@using WebProjekat.Models
@model WebProjekat.Models.Komentar
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="col-lg-4" action="/Posetilac/Komentarisi" method="post">
    <div class="form-group">
        <label for="TekstKomentara">Komentar:</label>
        <textarea class="form-control" name="TekstKomentara"></textarea>
        <p class="text-danger">@ViewBag.Komentar</p>
    </div>

    <div class="form-group">
        <label for="Ocena">Ocena:</label>
        <input class="form-control" type="number" name="Ocena" max="5" min="1" step="0.5" required />
        <p class="text-danger">@ViewBag.Ocena</p>
    </div>

    <div class="form-group">
        <label for="FitnesCentar">Fitnes Centar:</label>
        <select class="form-control" name="FitnesCentar.IDCentra" style="margin-bottom: 15px" required readonly>
            <option value="@(((FitnesCentar)ViewData["FitnesCentar"]).IDCentra)">@(((FitnesCentar)ViewData["FitnesCentar"]).Naziv)</option>
        </select>
    </div>

    <input class="form-control" type="submit" name="Komentarisi" value="Ostavi Komentar" />

</form>